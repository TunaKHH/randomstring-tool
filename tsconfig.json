{
    "exclude": ["node_modules"],
    "include": ["index.ts"],
    "compilerOptions": {
        "target": "es2016",
        "module": "CommonJS",
        "rootDir": "./",
        "baseUrl": ".",
        "declaration": true,
        "outDir": "./dist",
        "declarationDir": "./dist/declaration",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true
    }
}
